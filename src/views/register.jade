  body.text-center
    form    
    form.form-signin(action='/auth/register',method='POST')
      img.mb-4(src='/images/sapient_logo.png', alt='', width='128', height='46')
      h1.h3.mb-3.font-weight-normal Sign Up
      label.sr-only(for='firstName') First Name
      input#firstName.form-control(type='text', name='firstname',placeholder='First Name', required='')
      label.sr-only(for='lastName') Last Name
      input#lastName.form-control(type='text', name='lastname', placeholder='Last Name', required='')
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required='')
      label.sr-only(for='inpUsername') User Name
      input#inpUsername.form-control(type='text', name='username', placeholder='User Name', required='')
      label.sr-only(for='mobileNum') Mobile Number
      input#mobileNum.form-control(type='tel', name='phone', placeholder='Mobile Number', required='')

      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='')
      .mt3
        button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign Up
